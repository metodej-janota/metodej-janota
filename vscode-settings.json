{
  // Editor settings
  "security.workspace.trust.untrustedFiles": "open",
  "window.commandCenter": false,
  "window.titleBarStyle": "custom",
  "editor.scrollbar.vertical": "auto",
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "auto",
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.sortImports": "explicit"
  },
  // Basic style settings
  "workbench.colorTheme": "Andromeda Bordered",
  "workbench.iconTheme": "vscode-icons",
  // Font settings
  "editor.fontSize": 12,
  "terminal.integrated.fontSize": 12,
  // Prettier settings
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  // Apc Customize UI++
  "apc.activityBar": {
    "position": "bottom",
    "size": 28
  },
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 12,
      "y": 10
    }
  },
  "apc.statusBar": {
    "position": "editor-bottom",
    "height": 28,
    "fontSize": 12
  },
  "apc.stylesheet": {
    ".sidebar > .composite": "height:  !important",
    ".tabs-and-actions-container > .editor-actions": "display: none !important",
    ".titlebar-center": "display: none !important",
    ".titlebar-right": "display: none !important",
    ".inline-tabs-placeholder": "display: none !important",
    ".split-view-view .visible": "background-color: !important"
  },
  "editor.suggestSelection": "first",
  // Project Manager
  "projectManager.sortList": "Recent",
  "projectManager.git.baseFolders": [
    "/Users/janx/Desktop/Projekty"
  ],
  // Other settings
  "git.autofetch": true,
  "window.confirmSaveUntitledWorkspace": false,
}
