{
  // Appearance
  "editor.fontFamily": "0xProto Nerd Font",
  "editor.fontSize": 14,
  "workbench.layoutControl.enabled": false,
  "editor.stickyScroll.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.navigationControl.enabled": false,
  "window.commandCenter": false,
  "git.autofetch": true,
  "window.confirmSaveUntitledWorkspace": false,
  "workbench.activityBar.location": "hidden",
  "workbench.iconTheme": "bearded-icons",
  "workbench.colorTheme": "Bearded Theme Arc",
  "editor.minimap.enabled": false,
  "workbench.tips.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.showTabs": "multiple",
  "window.density.editorTabHeight": "default",
  "window.restoreWindows": "none",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "solid",

  // Custom Css
  "vscode_custom_css.imports": [
    "file:///Users/metodejjanota/Desktop/Projects/metodej-janota/vscodeCustomCss.css"
  ],

  // VSCode vim
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.useCtrlKeys": true,

  // VSCode vim appearance
  "editor.cursorSurroundingLines": 10,
  "vim.smartRelativeLine": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.highlightDuration": 150,
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": ["#282828", "#ffffff"],
  "vim.statusBarColors.insert": ["#29b362", "#ffffff"],
  "vim.statusBarColors.visual": ["#baa24a", "#ffffff"],
  "vim.statusBarColors.visualline": ["#baa24a", "#ffffff"],
  "vim.statusBarColors.visualblock": ["#baa24a", "#ffffff"],
  "vim.statusBarColors.commandlineinprogress": ["#2C2206", "#ffffff"],
  "vim.statusBarColors.searchinprogressmode": ["#171819", "#ffffff"],
  "vim.statusBarColors.surroundinputmode": ["#171819", "#ffffff"],

  // Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // VSCode WhitchKey
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["whichkey.show"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["whichkey.show"]
    }
  ],
  "whichkey.useFullWidthCharacters": true,
  "whichkey.bindingOverrides": [],
  "whichkey.bindings": [
    {
      "key": "/",
      "name": "[/] Fuzzy search in current folder",
      "type": "command",
      "command": "fuzzySearch.activeTextEditor"
    },
    {
      "key": "f",
      "name": "[f] Format document",
      "type": "command",
      "command": "editor.action.formatDocument"
    },
    {
      "key": "p",
      "name": "[p] Search Command palette",
      "type": "command",
      "command": "workbench.action.showCommands"
    },
    {
      "key": "s",
      "name": "[s] Search",
      "type": "bindings",
      "bindings": [
        {
          "key": "f",
          "name": "[f] Files",
          "type": "command",
          "command": "workbench.action.quickOpen"
        },
        {
          "key": ".",
          "name": "[.] Search recent files",
          "type": "command",
          "command": "workbench.action.openRecent"
        },
        {
          "key": "k",
          "name": "[k] Search in keybindings",
          "type": "command",
          "command": "workbench.action.openGlobalKeybindings"
        }
      ]
    },
    {
      "key": "w",
      "name": "[w] Window",
      "type": "bindings",
      "bindings": [
        {
          "key": "e",
          "name": "[e] View extensions",
          "type": "command",
          "command": "workbench.view.extensions"
        },
        {
          "key": "t",
          "name": "[t] File tree",
          "type": "command",
          "command": "workbench.view.explorer"
        },
        {
          "key": "g",
          "name": "[g] Git",
          "type": "command",
          "command": "workbench.view.scm"
        }
      ]
    },
    {
      "key": "g",
      "name": "[g] Git",
      "type": "bindings",
      "bindings": [
        {
          "key": "s",
          "name": "[s] Git status",
          "type": "command",
          "command": "git.status"
        },
        {
          "key": "c",
          "name": "[c] Git commit",
          "type": "command",
          "command": "git.commit"
        },
        {
          "key": "p",
          "name": "[p] Git push",
          "type": "command",
          "command": "git.push"
        },
        {
          "key": "l",
          "name": "[l] Git log",
          "type": "command",
          "command": "git.log"
        }
      ]
    },
    {
      "key": "r",
      "name": "[r] Run",
      "type": "bindings",
      "bindings": [
        {
          "key": "t",
          "name": "[t] Open terminal",
          "type": "command",
          "command": "workbench.action.terminal.toggleTerminal"
        },
        {
          "key": "x",
          "name": "[x] Close terminal",
          "type": "command",
          "command": "workbench.action.terminal.kill"
        },
        {
          "key": "c",
          "name": "[r] Refactor code",
          "type": "command",
          "command": "editor.action.refactor"
        },
        {
          "key": "n",
          "name": "[n] Rename Symbol",
          "type": "command",
          "command": "editor.action.rename"
        },
        {
          "key": "d",
          "name": "[d] Run with debuging",
          "type": "command",
          "command": "workbench.action.debug.start"
        },
        {
          "key": "r",
          "name": "[r] Run Without debugging",
          "type": "command",
          "command": "workbench.action.debug.run"
        }
      ]
    }
  ],
  "workbench.colorCustomizations": {
    "statusBar.background": "#29b362",
    "statusBar.noFolderBackground": "#29b362",
    "statusBar.debuggingBackground": "#29b362",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
  }
}
